<strong id= "equipment-detail-<%= equipment_category.id%>"> <%= equipment_category.name %>明细 </strong>
<table class = "table table-bordered table-striped equipment-info">
  <thead>
    <tr>
      <th>编号</th>
      <th>规格型号</th>
      <th>组数</th>
      <th>整组额定电压</th>
      <th>单只额定电压</th>
      <th>额定容量</th>
      <th>类型</th>
      <th>出厂日期</th>
      <th>投运日期</th>
      <th>备注</th>
    </tr>
  </thead>
  <tbody>
    <% n = 0%>
    <% equipment_category.batteries.where(station_id: @station.id).each do |t| %>

      <tr>
        <td> <%= n += 1%></td>
        <td> <%= t.standard           %> </td>
        <td> <%= t.number             %> </td>
        <td> <%= t.rated_voltage      %> </td>
        <td> <%= t.single_voltage     %> </td>
        <td> <%= t.rated_capacity     %> </td>
        <td> <%= t.category           %> </td>
        <td> <%= t.manufacture_date   %> </td>
        <td> <%= t.commissioning_date %> </td>
        <td> <%= t.remark             %> </td>
      </tr>
    <% end %>
  </tbody>
</table>
