<strong id= "equipment-detail-<%= equipment_category.id%>"> <%= equipment_category.name %>明细 </strong>
<table class = "table table-bordered table-striped equipment-info">
  <thead>
    <tr>
      <th>编号</th>
      <th>设备名称</th>
      <th>盘上设备主要名称及型号</th>
      <th>出厂序号</th>
      <th>出厂日期</th>
      <th>投运日期</th>
      <th>备注</th>
    </tr>
  </thead>
  <tbody>
    <% n = 0%>
    <% equipment_category.low_voltage_cabinets.where(station_id: @station.id).each do |t| %>

      <tr>
        <td> <%= n += 1%></td>
        <td> <%= t.name     %></td>
        <td> <%= t.pan_name_standard  %> </td>
        <td> <%= t.manufacture_number %> </td>
        <td> <%= t.manufacture_date   %> </td>
        <td> <%= t.commissioning_date %> </td>
        <td> <%= t.remark             %> </td>
      </tr>
    <% end %>
  </tbody>
</table>
